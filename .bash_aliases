alias ll="ls -ahlF"
alias la="ls -A"
alias l="ls -CF"


# Easier navigation: .., ..., .... ~ -
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias ~="cd ~"
alias -- -="cd -" # -- is often used (especially with Gnu programs) to stop parsing the following arguments as options. 

alias clr="clear"


alias gs="git status"
alias gb="git branch"

alias smi="nvidia-smi"
alias wsmi="watch -n 0 nvidia-smi"


alias ac="conda activate"
alias de="conda deactivate"
